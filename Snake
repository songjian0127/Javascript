<script>
    var canvas = document.getElementById("myCanvas");
    var ctx = canvas.getContext('2d');
    var canvasWidth = canvas.clientWidth;
    var canvasHeight = canvas.clientHeight;
    var xf = Math.floor(Math.random() * canvasWidth);
    var yf = Math.floor(Math.random() * canvasHeight);
    function foodCreate(xf,yf,canvasWidth,canvasHeight){
        ctx.fillStyle = '#FF0000';        
        if (xf<=(canvasWidth-10) && yf<=(canvasHeight-10)){
            ctx.fillRect(xf,yf,10,10);
        }
            else{
            ctx.fillRect(canvasWidth-10,canvasHeight-10,10,10);
            
        }
    };
    myFood = new foodCreate(xf,yf,canvasWidth,canvasHeight);
    console.log(myFood);
    
    // function snakeCreate(){
